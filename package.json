{
  "name": "pandora-box",
  "version": "0.1.1",
  "description": "Shared eslint configurations",
  "keywords": [
    "eslint",
    "eslint-config",
    "javascript",
    "typescript",
    "react",
    "prettier",
    "storybook",
    "jest"
  ],
  "homepage": "https://github.com/Zeindelf/pandora-box#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zeindelf/pandora-box.git"
  },
  "bugs": {
    "url": "https://github.com/Zeindelf/pandora-box/issues"
  },
  "author": "Zeindelf <zeindelf@hotmail.com> (https://zeindelf.dev)",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "npx eslint . --fix",
    "publish:base": "npm publish -w @pandora-box/eslint-config-base --access public",
    "publish:jest": "npm publish -w @pandora-box/eslint-config-jest --access public",
    "publish:ts": "npm publish -w @pandora-box/eslint-config-typescript --access public",
    "publish:node": "npm publish -w @pandora-box/eslint-config-node --access public",
    "publish:react": "npm publish -w @pandora-box/eslint-config-react --access public",
    "publish:prettier": "npm publish -w @pandora-box/prettier --access public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
